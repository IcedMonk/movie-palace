<!-- details -->
<section class="section details">
    <!-- details background -->
    <% var background = poster = 'img/covers/posterplaceholder.jpg' %>
        <% if (typeof data.backdrop_path != 'undefined') { %>
            <% background = 'https://image.tmdb.org/t/p/original'+data.backdrop_path %>
                <% } %>

                    <% if (typeof data.poster_path != 'undefined') { %>
                        <% poster = 'https://image.tmdb.org/t/p/w300'+data.poster_path %>
                            <% } %>
                                <div class="details__bg" data-bg="<%- background %> "></div>
                                <!-- end details background -->
                                <!-- details content -->
                                <div class="container">
                                    <div class="row">
                                        <!-- content -->
                                        <div class="col-xl-12">
                                            <div class="card card--details card--series">
                                                <div class="row">
                                                    <!-- card cover -->
                                                    <div class="col-12 col-sm-4 col-md-4 col-lg-3 col-xl-3">
                                                        <div class="card__cover my-card">
                                                            <img src="<%- poster %>" alt="poster" class="lazyload" />
                                                        </div>
                                                    </div>
                                                    <!-- end card cover -->
                                                    <!-- card content -->
                                                    <div class="col-12 col-sm-8 col-md-8 col-lg-9 col-xl-9">
                                                        <div class="card__content my-card">
                                                            <!-- title -->
                                                            <div class="col-12 p-l-0">
                                                                <h1 class="details__title">
                                                                    <%- data.title %>
                                                                </h1>
                                                            </div>
                                                            <!-- end title -->
                                                            <div class="card__wrap">
                                                                <span class="card__rate"><i class="icon ion-ios-star"></i>8.4</span>
                                                                <ul class="card__list single">
                                                                    <li>HD</li>
                                                                    <% if (data.adult == 'true') { %>
                                                                        <li>18+</li>
                                                                        <% } %>
                                                                            <li class="share-btn" data-title="<%-data.title || '' %> " data-url="/movie/<%- data.id %>">
                                                                                <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="25px" height="25px" viewBox="0 0 300 300" xml:space="preserve">
