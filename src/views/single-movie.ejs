                                                                                    c0-1.059,0.228-2.002,0.293-3.032L86.928,190.283c-9.24,7.764-20.978,12.63-33.982,12.63C23.699,202.913,0,179.231,0,150
                                                                                    c0-29.262,23.699-52.962,52.945-52.962c13.005,0,24.754,4.883,33.982,12.646l107.489-53.726c-0.065-1.025-0.293-1.987-0.293-3.046
                                                                                    C194.124,23.7,217.789,0,247.053,0C276.297,0,300,23.7,300,52.913c0,29.267-23.703,52.963-52.947,52.963
                                                                                    c-13.037,0-24.787-4.886-33.984-12.68l-107.486,53.763C105.644,147.984,105.875,148.942,105.875,150L105.875,150z M105.875,150" fill="#ff55a5" />
                                                                            </g>
                                                                            
                                                                            </svg>
                                                                            </li>
                                                                </ul>
                                                            </div>
                                                            <ul class="card__meta">
                                                                <li class="genre"><span>Genre:</span>
                                                                    <%- data.genres.toString().split(',').join(', ') %>
                                                                </li>
                                                                <li><span>Release date:</span>
                                                                    <%- data.release_date %>
                                                                </li>
                                                                <li><span>Running time:</span>
                                                                    <%- data.runtime %> <span> min</span></li>
                                                                <li><span>Country:</span>
                                                                    <% let length = 3 %>
                                                                        <% if (data.production_countries.toString().length < length) { %>
                                                                            <% length = data.production_countries.toString().length %>
                                                                                <% } %>
                                                                                    <a href="#" class="genre" aria-label="countries">
                                                                                        <%- data.production_countries.toString().split(',').slice(1, length).join(', ') %>
                                                                                    </a>
                                                                </li>
                                                            </ul>
                                                            <div class="card__description card__description--details">
                                                                <%- data.overview %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- end card content -->
                                                </div>
                                            </div>
                                        </div>
                                        <!-- end content -->
                                        <!-- cast -->
                                        <div class="col-12">
                                            <!-- section title -->
                                            <% if (recommendations.length > 0) { %>
                                                <div class="col-12">
                                                    <h2 class="section__title">Recommended</h2>
                                                </div>
                                                <% } %>
                                                    <!-- end section title -->
                                                    <div class="row owl-carousel" id="owl-carousel">
                                                        <% for(var i=0; i<recommendations.length; i++) { %>
                                                            <%var url %>
                                                                <% url = '/movie/'+ recommendations[i].id %>
                                                                    <!-- card -->
                                                                    <div class="col-12 item">
                                                                        <div class="card">
                                                                            <div class="card__cover">
                                                                                <% if (recommendations[i].poster_path) { %>
                                                                                    <a href="" data-href="https://image.tmdb.org/t/p/w185<%- recommendations[i].poster_path %>" class="boxout1 progressive replace" aria-label="poster">
                                                                                        <img src="https://ucarecdn.com/dc3dad83-e7b5-44cd-841a-dbf4000005d6/-/resize/200x200/-/quality/lightest/party.jpg" class="preview" alt="party" />
                                                                                    </a>
                                                                                    <% } else { %>
                                                                                        <a href="" data-href="/img/covers/posterplaceholder.jpg" class="boxout1 progressive replace" aria-label="poster">
                                                                                            <img src="https://ucarecdn.com/dc3dad83-e7b5-44cd-841a-dbf4000005d6/-/resize/200x200/-/quality/lightest/party.jpg" class="preview" alt="party" />
                                                                                        </a>
                                                                                        <% } %>
                                                                                            <a href="/movie/<%- recommendations[i].id %>" class="card__play" aria-label="icon-play">
                                                                                                <i class="icon ion-ios-play"></i>
                                                                                            </a>
                                                                            </div>
                                                                            <div class="card__content">
                                                                                <a href="/movie/<%- recommendations[i].id %>" aria-label="title">
                                                                                    <h3 class="card__title">

                                                                                        <%- recommendations[i].title %>

                                                                                    </h3>
                                                                                </a>
                                                                                <span class="card__category">
                                                                                    <a href="#" aria-label="genres"><%- recommendations[i].genre_ids.toString().split(',').join(', ') %></a>
                                                                                </span>
                                                                                <div class="card__wrap">
                                                                                    <span class="card__rate">
                                                        <i class="icon ion-ios-star"></i><%- recommendations[i].vote_average %> </span>

                                                                                    <ul class="card__list">
                                                                                        <li class="grid-share-btn" data-title="<%- recommendations[i].name || recommendations[i].title || '' %> " data-url="/movie/<%- recommendations[i].id %>">
                                                                                            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="20px" height="20px" viewBox="0 0 300 300" xml:space="preserve">
                                                                                                    <g id="XMLID_3_">
                                                                                                        <path id="XMLID_239_" d="M105.875,150c0,1.025-0.231,1.985-0.293,3.011l107.486,53.744c9.213-7.797,20.98-12.663,33.984-12.663
                                                                                                            c29.244,0,52.947,23.698,52.947,52.946C300,276.302,276.297,300,247.053,300c-29.264,0-52.929-23.698-52.929-52.962
                                                                                                            c0-1.059,0.228-2.002,0.293-3.032L86.928,190.283c-9.24,7.764-20.978,12.63-33.982,12.63C23.699,202.913,0,179.231,0,150
                                                                                                            c0-29.262,23.699-52.962,52.945-52.962c13.005,0,24.754,4.883,33.982,12.646l107.489-53.726c-0.065-1.025-0.293-1.987-0.293-3.046
                                                                                                            C194.124,23.7,217.789,0,247.053,0C276.297,0,300,23.7,300,52.913c0,29.267-23.703,52.963-52.947,52.963
                                                                                                            c-13.037,0-24.787-4.886-33.984-12.68l-107.486,53.763C105.644,147.984,105.875,148.942,105.875,150L105.875,150z M105.875,150" fill="#ff55a5" />
                                                                                                    </g>
                                                                                                    
                                                                                                    </svg>
                                                                                        </li>

                                                                                    </ul>

                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <!-- end card -->
                                                                    <% } %>
                                                    </div>
                                        </div>
                                        <!-- end cast -->
                                        <!-- recommendations -->
                                        <div class="col-12 col-xl-12">
                                        </div>
                                        <!-- end recommendations -->
                                    </div>
                                </div>
                                <!-- end details content -->
</section>
<!-- end details -->